<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:layout_below="@id/url"
        android:layout_above="@id/bottomBtns"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp" />

    <LinearLayout
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="-1dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/urlinput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="652dp"
            android:layout_weight="1"
            android:hint="@string/url"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:minHeight="48dp" />

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:contentDescription="Set Homepage"
            app:srcCompat="@drawable/baseline_home_24" />

        <ImageButton
            android:id="@+id/addBookmarkBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_star_outline_24"
            android:contentDescription="Add Bookmark"
            android:backgroundTint="?attr/colorPrimaryVariant"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBtns"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Go Back"
            android:backgroundTint="?attr/colorPrimaryVariant" />

        <ImageButton
            android:id="@+id/forwardBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_arrow_forward_24"
            android:contentDescription="Go Forward"
            android:backgroundTint="?attr/colorPrimaryVariant"/>

        <ImageButton
            android:id="@+id/bookmarkBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_bookmark_border_24"
            android:contentDescription="Bookmark"
            android:backgroundTint="?attr/colorPrimaryVariant"/>

        <ImageButton
            android:id="@+id/historyBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_history_24"
            android:contentDescription="Browser History"
            android:backgroundTint="?attr/colorPrimaryVariant"/>

        <ImageButton
            android:id="@+id/settingBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_settings_24"
            android:contentDescription="Settings"
            android:backgroundTint="?attr/colorPrimaryVariant"/>

    </LinearLayout>


</RelativeLayout>